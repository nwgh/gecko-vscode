{
	"version": "0.2.1",
	"configurations": [
		{
			"name": "OSX Debug",
			"type": "cppdbg",
			"request": "launch",
			"launchOptionType": "Local",
			"miDebuggerPath": "/usr/local/bin/gdb",
			"targetArchitecture": "x64",
			"program": "${workspaceRoot}/obj-dbg-noopt/dist/NightlyDebug.app/Contents/MacOS/firefox",
			"args": ["-no-remote", "-profile", "${env.HOME}/.mozprofiles/debug"],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}/obj-dbg-noopt/dist/NightlyDebug.app/Contents/MacOS",
            "env": {"MOZ_LOG": "timestamp,nsHttp:5", "MOZ_LOG_FILE": "/tmp/nspr.log", "SSLKEYLOGFILE": "/tmp/nsskeys.log"}
		},
		{
			"name": "Linux Debug",
			"type": "cppdbg",
			"request": "launch",
			"launchOptionType": "Local",
			"miDebuggerPath": "/usr/bin/gdb",
			"targetArchitecture": "x64",
			"program": "${workspaceRoot}/obj-dbg-noopt/dist/bin/firefox",
			"args": ["-no-remote", "-profile", "${env.HOME}/.mozprofiles/debug"],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}/obj-dbg-noopt/dist/bin",
            "env": {"MOZ_LOG": "timestamp,nsHttp:5", "MOZ_LOG_FILE": "/tmp/nspr.log", "SSLKEYLOGFILE": "/tmp/nsskeys.log"}
		}
	]
}
