{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mac Debug",
            "type": "cppdbg",
            "MIMode": "lldb",
            "request": "launch",
            "stopAtEntry": false,
            "environment": [{"name": "MOZ_LOG", "value": "timestamp,nsHttp:5"},
                            {"name": "MOZ_LOG_FILE", "value": "/tmp/nspr.log"},
                            {"name": "SSLKEYLOGFILE", "value": "/tmp/nsskeys.log"}],
            "program": "${workspaceRoot}/obj-dbg/dist/NightlyDebug.app/Contents/MacOS/firefox",
            "cwd": "${workspaceRoot}/obj-dbg/dist/NightlyDebug.app/Contents/MacOS",
            "args": ["-no-remote", "-profile", "${env:HOME}/.mozprofiles/debug"]
        },
        {
            "name": "Linux Debug",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "environment": [{"name": "MOZ_LOG", "value": "timestamp,nsHttp:5"},
                            {"name": "MOZ_LOG_FILE", "value": "/tmp/nspr.log"},
                            {"name": "SSLKEYLOGFILE", "value": "/tmp/nsskeys.log"}],
            "MIMode": "gdb",
            "program": "${workspaceRoot}/obj-dbg-noopt/dist/bin/firefox",
            "cwd": "${workspaceRoot}/obj-dbg-noopt/dist/bin",
            "args": ["-no-remote", "-profile", "${env:HOME}/.mozprofiles/debug"]
        },
        {
            "name": "Windows Debug",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "environment": [{"name": "MOZ_LOG", "value": "timestamp,nsHttp:5"},
                            {"name": "MOZ_LOG_FILE", "value": "/tmp/nspr.log"},
                            {"name": "SSLKEYLOGFILE", "value": "/tmp/nsskeys.log"}],
            "MIMode": "gdb",
            "program": "${workspaceRoot}/obj-dbg-noopt/dist/bin/firefox.exe",
            "cwd": "${workspaceRoot}/obj-dbg-noopt/dist/bin",
            "args": ["-no-remote", "-profile", "${env:HOME}/.mozprofiles/debug"]
        },
        {
            "name": "Mac Attach",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceRoot}/obj-dbg/dist/NightlyDebug.app/Contents/MacOS/firefox",
            "MIMode": "lldb"
        },
        {
            "name": "Mac Attach (Child)",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceRoot}/obj-dbg/dist/NightlyDebug.app/Contents/MacOS/plugin-container.app/Contents/MacOS/plugin-container",
            "MIMode": "lldb"
        },
        {
            "name": "Linux Attach",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceRoot}/obj-dbg-noopt/dist/bin/firefox",
            "MIMode": "gdb"
        },
        {
            "name": "Windows Attach",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceRoot}/obj-dbg-noopt/dist/bin/firefox.exe",
            "MIMode": "gdb"
        },
        {
            "name": "Linux RR Replay",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/obj-dbg-noopt/dist/bin/firefox",
            "args": [],
            "miDebuggerServerAddress": "localhost:50505",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/obj-dbg-noopt/dist/bin",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Set up to resolve symbols",
                        "text": "set sysroot /",
                        "ignoreFailures": false
                    }
                ]
            },
            "osx": {
                "MIMode": "gdb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}
