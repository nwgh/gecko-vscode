{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "./mach",
    "isShellCommand": true,
    "args": ["--log-no-times"],
    "options": {"cwd": "${workspaceRoot}", "env": {"MOZ_LOG": "timestamp,nsHttp:5", "MOZ_LOG_FILE": "/tmp/nspr.log", "SSLKEYLOGFILE": "/tmp/nsskeys.log", "SSLDEBUG": "1", "SSLTRACE": "127", "SSLDEBUGFILE": "/tmp/nssdebug.log"}},
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Full Build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": ["build"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                 "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Binaries Build",
            "suppressTaskName": true,
            "args": ["build", "binaries"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                 "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Run (temporary profile)",
            "suppressTaskName": true,
            "args": ["run"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "severity": "error",
                 "pattern": {
                    "regexp": "^Assertion failure: (.+), at ([a-zA-Z0-9+/.-_]+):([0-9]+)$",
                    "file": 2,
                    "line": 3,
                    "message": 1
                }
            }
        },
        {
            "taskName": "RR Record (temporary profile)",
            "suppressTaskName": true,
            "args": ["run", "--debugger=rr"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "severity": "error",
                 "pattern": {
                    "regexp": "^Assertion failure: (.+), at ([a-zA-Z0-9+/.-_]+):([0-9]+)$",
                    "file": 2,
                    "line": 3,
                    "message": 1
                }
            }
        },
        {
            "taskName": "Run (profile picker)",
            "suppressTaskName": true,
            "command": "/home/nwgh/src/firefox-profile-picker/node_modules/.bin/electron",
            "args": ["/home/nwgh/src/firefox-profile-picker"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "severity": "error",
                 "pattern": {
                    "regexp": "^Assertion failure: (.+), at ([a-zA-Z0-9+/.-_]+):([0-9]+)$",
                    "file": 2,
                    "line": 3,
                    "message": 1
                }
            }
        },
        {
            "taskName": "RR Record (profile picker)",
            "suppressTaskName": true,
            "command": "/home/nwgh/src/firefox-profile-picker/node_modules/.bin/electron",
            "args": ["/home/nwgh/src/firefox-profile-picker", "--rr-record"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "severity": "error",
                 "pattern": {
                    "regexp": "^Assertion failure: (.+), at ([a-zA-Z0-9+/.-_]+):([0-9]+)$",
                    "file": 2,
                    "line": 3,
                    "message": 1
                }
            }
        },
        {
            "taskName": "Clobber",
            "suppressTaskName": true,
            "args": ["clobber"]
        }
    ]
}
